<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_A700"/>
            <corners android:radius="@dimen/_4pxh"/>
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/blue_gray_900"/>
                <corners android:radius="@dimen/_4pxh"/>
                <gradient android:centerColor="@color/black_900_00"
                    android:endColor="@color/white_A700_8e"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10pxh"
    android:padding="16dp"
    android:background="#FFF0E9">

    <!-- Profile Image and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coal Dingo"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Â· just now"
            android:textSize="12sp"
            android:textColor="#888888" />
    </LinearLayout>

    <!-- Question Text -->
    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Is there a therapy which can cure crossdressing &amp; bdsm c&amp;mpulsion?"
        android:textSize="14sp"
        android:textColor="#000000" />

    <!-- Top Replies -->
    <TextView
        android:id="@+id/top_replies_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Top replies"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/top_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis...."
        android:textSize="14sp"
        android:textColor="#666666" />

    <!-- Like, Dislike, and Reply -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_like"
        android:drawablePadding="4dp"
        android:text="2"
        android:textColor="#0000FF"
        android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/dislike_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_like_down"
        android:drawablePadding="4dp"
        android:text="2"
        android:textColor="#FF0000"
        android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/reply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_reply"
        android:drawablePadding="4dp"
        android:text="Reply"
        android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/button_studios"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/studio_button_background"
        android:gravity="center"
        android:text="Studio's"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/button_workshops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_studios"
        android:layout_alignBottom="@id/button_studios"
        android:layout_marginStart="20dp"
        android:background="@drawable/workshop_button_background"
        android:gravity="center"
        android:padding="12dp"
        android:text="Workshop"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_studios"
        android:layout_alignStart="@id/button_studios"
        android:layout_marginBottom="20dp"
        android:background="@drawable/home_button_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="Home"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>

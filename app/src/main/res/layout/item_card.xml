<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_330pxh"
    android:layout_height="@dimen/_300pxh"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_of_cards">

    <TextView
        android:id="@+id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="Aroma Therapy"
        style="@style/txtDMSerifDisplayregular24"/>

    <TextView
        android:layout_marginStart="@dimen/_110pxh"
        android:id="@+id/card_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7am - 8am"
        style="@style/txtRadleyregular16"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/design_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_170pxh"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white_A700"/>

    <TextView
        android:id="@+id/card_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:text="Completed"
        style="@style/txtRadleyregular24"
        />
</LinearLayout>
